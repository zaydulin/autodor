
{{#extend 'layouts/dashboard/simple' title="lock-screen" bodyClass="lock-screen" active="auth-lock-screen" path="../../" }}
    {{#content "content"}}

   <div class="main-auth-page">
      <a href="../../dashboard/index.html" class="auth-logo">
         <img src="../../assets/images/logo.png" class="img-fluid">
      </a>
      <div class="clip-board">
         <div class="container">
            <div class="row auth-details-card">
               <div class="col-lg-12">
                  <div class="card iq-auth-card mb-0 row">
                     <img src="{{path}}assets/images/auth/01.webp" alt="background" class="img-fluid w-75 position-absolute">
                     <div class="card-body col-5 offset-7">
                        <div class="auth-form">
                           <div class="text-center">
                              <img src="{{path}}assets/images/user-profile/1.png"
                                 class="img-fluid avatar avatar-100 avatar-rounded" alt="profile-image">
                           </div>
                           <div>
                              <h1 class="mt-3 text-center">Hi ! Austin Robertson</h1>
                              <p class="text-center  mt-2">Enter your password to acess the admin</p>
                              <div class="form-floating mb-2">
                                 <input type="password" class="form-control" id="Password" placeholder="Password">
                                 <label for="Password">Password</label>
                              </div>
                           </div>
                           <div class="text-center mt-3">
                              <button class="btn btn-primary ">Login</button>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   <div class="responsive-card auth-small">
      <div class="card">
         <div class="card-body">
            <div class="auth-form">
               <div class="text-center">
                  <img src="{{path}}assets/images/user-profile/1.png"
                     class="img-fluid avatar avatar-100 avatar-rounded" alt="profile-image">
               </div>
               <div>
                  <h1 class="mt-3 text-center">Hi ! Austin Robertson</h1>
                  <p class="text-center  mt-2">Enter your password to acess the admin</p>
                  <div class="form-floating mb-2">
                     <input type="password" class="form-control" id="Password" placeholder="Password">
                     <label for="Password">Password</label>
                  </div>
               </div>
               <div class="text-center mt-3">
                  <button class="btn btn-primary ">Login</button>
               </div>
            </div>
         </div>
      </div>
   </div>
   {{/content}}
{{/extend}}